filters:
  and:
    - file.inFolder("Text/Art/content")
formulas:
  name: aliases[0]
  id: file.name.split("(")[1].toString().slice(7).split(")")[0]
  country: file.name.split("(")[1].toString().slice(0, 4)
  created_year: |
    created.year
  created_year_month: created.format("YYYY-MM")
views:
  - type: cards
    name: Смотрю
    filters:
      and:
        - Status == "watch"
    groupBy:
      property: Type
      direction: ASC
    order:
      - formula.name
      - Rating
      - Status
      - Episode
      - Year
      - Views
      - Type
    sort:
      - property: created
        direction: DESC
    image: note.Cover
    imageFit: ""
    imageAspectRatio: 1.4
  - type: table
    name: View
    filters:
      and:
        - Status == "plan"
        - Type.startsWith("anime")
    order:
      - formula.id
      - formula.country
      - file.name
    sort:
      - property: created
        direction: ASC
      - property: formula.country
        direction: ASC
      - property: Type
        direction: ASC
    columnSize:
      formula.id: 42
      formula.country: 13
    image: note.Cover
    cardSize: 180
    imageAspectRatio: 1.4
  - type: cards
    name: Читаю
    filters:
      and:
        - Status == "watch"
        - Type.containsAny("book", "comix", "manga", "manhua", "manhwa", "ranobe")
    order:
      - formula.name
      - Rating
      - Status
      - Episode
      - Year
      - Views
      - Type
    imageAspectRatio: 1.4
    image: note.Cover
  - type: cards
    name: Запланировано
    filters:
      and:
        - Type == "anime"
    order:
      - formula.name
    sort:
      - property: created
        direction: DESC
    imageAspectRatio: 1.4
    image: note.Cover
  - type: cards
    name: Card
    groupBy:
      property: Year
      direction: ASC
    order:
      - file.name
    sort:
      - property: created
        direction: ASC
    cardSize: 200
    image: note.Cover
    imageAspectRatio: 1.4
  - type: cards
    name: Created Group
    groupBy:
      property: formula.created_year_month
      direction: ASC
    order:
      - file.name
    sort:
      - property: created
        direction: ASC
    cardSize: 200
    image: note.Cover
    imageAspectRatio: 1.4
  - type: cards
    name: Year Group
    groupBy:
      property: Year
      direction: ASC
    order:
      - formula.name
    sort:
      - property: formula.name
        direction: ASC
    cardSize: 200
    image: note.Cover
    imageAspectRatio: 1.4
